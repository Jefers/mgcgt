<!-- Page Content -->
<div class="container">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">MGC GT
                <small>1969</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Projects -->
    <% @projects.each do |project| %>
        <div class="row">
            <div class="panel panel-default">
             <div class="panel-body">
                <div class="col-md-7">
                    <a href="#">
                      <%= image_tag attachment_url(project, :profile_image, :fill, 400, 300, format: "jpg") %>
                    </a>
                </div>
                <div class="col-md-5">
                        <h3><%= project.title %></h3>
                        <h4><%= project.subtitle %></h4>
                        <p><%= project.description %></p>
                        <%= link_to 'Show', project %>
                        <a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
             </div>
            </div>
            <hr>
        </div>
    <% end %>
    <!-- /.row -->
    <hr>
    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">

                    <%= paginate @projects %>

        </div>
    </div>
    <!-- /.row -->
    <hr>
    <%= render 'shared/footer' %>
</div>

